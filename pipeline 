2ï¸âƒ£ Bluetooth Microservice Script (src/bluetooth_scan_service.ts)

import * as noble from '@abandonware/noble';

console.log('ğŸ“¡ Bluetooth Microservice: Scanning for devices...');

noble.on('stateChange', (state) => {
  if (state === 'poweredOn') {
    noble.startScanning([], true);
  } else {
    noble.stopScanning();
  }
});

noble.on('discover', (peripheral) => {
  console.log(`ğŸ“¶ Found device: ${peripheral.advertisement.localName || 'Unknown'} [${peripheral.address}]`);
  
  // Placeholder: Add crown-binding or sigil activation logic here.
});

